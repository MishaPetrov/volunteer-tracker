<div id="back_btn"><a href="/"><button class="btn btn-default">Back</button></a></div>
<div id="edit-panel" class="panel panel-default">
  <div class="panel-heading">
    <h3>Edit: <%= @volunteer.name %></h3>
  </div>
  <div class="panel-body">
    <form action="/volunteers/<%= @volunteer.id()%>/edit" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="name">Volunteer's Name</label>
        <input id="name" name="name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn btn-lg">Update Volunteer</button>
    </form>
    <form action="/volunteers/<%= @volunteer.id()%>/edit" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-lg">Delete Volunteer</button>
    </form>
  </div>
</div>

<div id="back_btn"><a href="/"><button class="btn btn-default">Back</button></a></div>
<div id="title">
  <h2><%= @project.title %></h2>
  <a id="edit" href="/projects/<%= @project.id()%>/edit">Edit Project</a>
</div>
<div class="panel panel-default" id="volunteer">
  <div class="panel-heading">
    <h4>List of Current Volunteers</h4>
  </div>
  <div class="panel-body">
  <table id="vlist" class="table table-hover">
    <thead>
      <tr>
        <th id="v">Volunteer ID number</th>
        <th id="v">Volunteer name</th>
      </tr>
    </thead>
    <% @volunteers_list.each do |volunteer| %>
      <tr>
        <td> <a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.id() %></a> </td>
        <td> <a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.name() %></a> </td>
      </tr>
    <% end %>
  </table>
  </div>
</div>

<div class="panel panel-default" id="volunteer">
  <div class="panel-heading">
    <h4>Add a New Volunteer</h4>
  </div>
  <div class="panel-body">
    <form action="/projects/<%= @project.id() %>" method="post">
      <div class="form-group">
        <label for="title">Volunteer's Name</label>
        <input id="name" name="name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn-lg">Add Volunteer</button>
    </form>
  </div>
</div>

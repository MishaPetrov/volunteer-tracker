<div id="back_btn"><a href="/"><button class="btn btn-default">Back</a></div>
<h1><%= @project.title %></h1>
<a href="/projects/<%= @project.id()%>/edit">Edit Project</a>
<div class="panel" id="add_project">
  <div class="panel-heading">
    <h1>Volunteers for <%= @project.title %></h1>
  </div>
  <div class="panel-body">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Volunteer ID number</th>
        <th>Volunteer name</th>
      </tr>
    </thead>
    <% @volunteers_list.each do |volunteer| %>
      <tr>
        <td> <a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.id() %></a> </td>
        <td> <a href="/volunteers/<%= volunteer.id()%>"><%= volunteer.name() %></a> </td>
      </tr>
    <% end %>
  </table>
  </div>
</div>

<div class="panel" id="add_project">
  <div class="panel-heading">
    <h4>Add a New Volunteer</h4>
  </div>
  <div class="panel-body">
    <form action="/projects/<%= @project.id() %>" method="post">
      <div class="form-group">
        <label for="title">Volunteer's Name</label>
        <input id="name" name="name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn-lg">Add Volunteer</button>
    </form>
  </div>
</div>
